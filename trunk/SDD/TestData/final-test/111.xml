<treatment>
  <number>9.</number>
  <TaxonIdentification Status="ACCEPTED">
    <genus_name>Arenaria</genus_name>
    <species_name>serpyllifolia</species_name>
    <species_authority>Linnaeus</species_authority>
    <place_of_publication>
