    <statement id="104.txt-0">
      <text>Stems often 1–10, prostrate to trailing.</text>
      <structure id="o145" name="stem">
        <character char_type="range_value" name="count" from="1" to="10" modifier="often" />
        <character char_type="range_value" name="habit" from="prostrate" to="trailing" />
        <character name="habit" value="prostrate" />
        <character name="habit" value="trailing" />
      </structure>
    </statement>
    <statement id="104.txt-1">
      <text>Inflorescences axillary, solitary flowers.</text>
      <structure id="o146" name="inflorescence">
        <character name="position" value="axillary" />
      </structure>
      <structure id="o147" name="flower">
        <character name="arrangement_or_habit" value="solitary" />
      </structure>
    </statement>
    <statement id="104.txt-2">
      <text>Pedicels straight to widely divergent, often hooked distally in fruit, 25–40 mm.</text>
      <structure id="o148" name="pedicel">
        <character name="course" value="straight" />
        <character name="arrangement" value="divergent" modifier="widely" />
        <character name="shape" value="hooked" modifier="often;distally" constraint="in fruit" constraintid="o149" />
        <character char_type="range_value" name="size" from="25" from_unit="mm" to="40" to_unit="mm" />
      </structure>
      <structure id="o149" name="fruit" />
    </statement>
    <statement id="104.txt-3">
      <text>Petals 1/2–3/4 times as long as sepals or absent.</text>
      <structure id="o151" name="sepal" />
    </statement>
    <statement id="104.txt-4">
      <text>2n = 44 (South America ).</text>
      <structure id="o150" name="petal">
